maxWidth = 500px;

svg-red = #E74C3C;
svg-green = #2ECC71;
svg-purple = #9B59B6;


zIndex = {
	top: 1000,
	bottom: 0
}

@import url("http://fonts.googleapis.com/css?family=Open+Sans");

@import "common.styl";


* {
	box-sizing: border-box;
}

html {
	height: 100%;
}
body {
	height: 100%;
	// max-width: maxWidth;
	margin: auto;  
	font-family: "Open Sans", Verdana, sans-serif;
}
main {
	height: 100%;
}

@keyframes fade-in {
  0%   { opacity: 0; }
  100% { opacity: 20em; }
}


card-width = 100px;
card-height = card-width*1.5;


.cards {
	display: flex;
	flex-wrap: wrap;
	align-content: flex-start;
	align-items: center;
	margin: auto;
	// justify-content: space-around;
}
.card {

	width: card-width;
	height: card-height;
	border-radius: 6px;
	box-shadow: 0px 0px 10px rgba(0, 0, 0, .3);
	display: flex;
	flex-direction: column;
	justify-content: center;

	margin: 10px;

	shape-margin-h = 14px;
	shape-margin-v = 3px;
	shape-width = card-width - (shape-margin-h * 2);
	shape-height = shape-width/2;


	.shape {
		width: shape-width;
		height: shape-height;
		margin: shape-margin-v shape-margin-h;
	}

	// colors
	&.red {
		& path,	& polygon, & .pattern * {
			fill: svg-red;
		}
	}
	&.green {
		& path,	& polygon, & .pattern * {
			fill: svg-green;
		}
	}
	&.purple {
		& path,	& polygon, & .pattern * {
			fill: svg-purple;
		}
	}

	


}








