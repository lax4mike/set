
.hint {
	text-align: right;
	color: #999;
	
	padding: 16px 0;
	
	a,
	a:link,
	a:visited
	a:hover,
	a:active {
		color: inherit;
		text-decoration: none;
	}
}

.hint__sets {
	display: flex;
	flex-direction: row-reverse;
	flex-wrap: wrap;
}
.hint__set {
	flex: 0 0 25%;
	padding: 0 10px 10px;
	
	display: flex;
	justify-content: center;
}

.hint__title {
	padding: 0 10px 10px;
}

.card.card--mini {
    width: 30px;
    height: 45px;
    position: relative;
    margin: 1px;
    box-shadow: 0px 1px 3px 0px rgba(0,0,0,0.3);
    border-radius: 3px;
    cursor: default;
    
    .shape {
        margin: 1px 0;
    }
}